@model IEnumerable<EmployeeDetails.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<div style="text-align:end"><a asp-action="Create" class="btn btn-primary">Create New</a></div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlySalary)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.AnnualSalary)
            </th>
            <th>
                Action
            </th>
         
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.MonthlySalary)</td>
                <td>@Html.DisplayFor(modelItem => item.AnnualSalary)</td>
               
                <td>
                <form method="post"><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                 <button  type="submit" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Do you really want to delete this Record?');" class="btn  btn-danger"><i class="fas fa-trash-alt"></i>&nbsp;Delete</button>
                </form>
                </td>
            </tr>
        }
    </tbody>
</table>
